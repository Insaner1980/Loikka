{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Loikka",
  "version": "1.0.0",
  "identifier": "com.loikka.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Loikka",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "decorations": false,
        "resizable": true,
        "transparent": false,
        "backgroundColor": "#0A0A0A",
        "additionalBrowserArgs": "--disable-features=LazyImageLoading,LazyFrameLoading"
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "$RESOURCE/**", "**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico"
    ],
    "resources": [
      "../google-credentials.json"
    ],
    "shortDescription": "Yleisurheilusovellus",
    "publisher": "Loikka",
    "copyright": "Â© 2025 Loikka",
    "category": "Sports",
    "windows": {
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "languages": ["Finnish", "English"],
        "displayLanguageSelector": false
      }
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:loikka.db"]
    }
  }
}
